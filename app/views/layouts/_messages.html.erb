<div class="ui grid">
  <% flash.each do |type, msg| %>
    <div class="sixteen wide mobile eight wide computer centered column">
      <div class="ui <%= type %> message">
        <i class="close icon"></i>
        <div class="header">
          <%= msg %>
        </div>
      </div>
    </div>
  <% end %>
</div>
